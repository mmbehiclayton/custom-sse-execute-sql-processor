<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.sse.processors</groupId>
        <artifactId>sse-execute-sql-bundle</artifactId>
        <version>2.1.0</version>
    </parent>

    <artifactId>nifi-sse-execute-sql-nar</artifactId>
    <version>2.1.0</version>
    <packaging>nar</packaging>

    <name>SSE ExecuteSQL NAR</name>
    <description>NAR package for SSE ExecuteSQL processors</description>

    <dependencies>
        <!-- Our custom processors -->
        <dependency>
            <groupId>com.sse.processors</groupId>
            <artifactId>nifi-sse-execute-sql-processors</artifactId>
            <version>2.1.0</version>
        </dependency>
        
        <!-- NiFi Standard NAR - Contains AbstractExecuteSQL and Services API -->
        <dependency>
            <groupId>org.apache.nifi</groupId>
            <artifactId>nifi-standard-nar</artifactId>
            <version>${nifi.version}</version>
            <type>nar</type>
        </dependency>
        
        <!-- NiFi Standard Processors (needed for NAR documentation generation) -->
        <dependency>
            <groupId>org.apache.nifi</groupId>
            <artifactId>nifi-standard-processors</artifactId>
            <version>${nifi.version}</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- NiFi Database Utils (needed for NAR documentation generation) -->
        <dependency>
            <groupId>org.apache.nifi</groupId>
            <artifactId>nifi-database-utils</artifactId>
            <version>${nifi.version}</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- NiFi NAR Maven Plugin -->
            <plugin>
                <groupId>org.apache.nifi</groupId>
                <artifactId>nifi-nar-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <!-- Include all dependencies -->
                    <includeDependencies>true</includeDependencies>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
